<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:id="@+id/edit_profile" />

    <TextView
        android:text="Name"
        android:id="@+id/text_name"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Home Address:"
        android:id="@+id/text_home_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/txt_view_name"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="Email Address:"
        android:id="@+id/text_email_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_view_home_address"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_view_name"
        android:layout_below="@+id/text_name"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/edit_profile"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/edit_profile"
        android:id="@+id/txt_view_home_address"
        android:layout_below="@id/text_home_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="Title"
        android:id="@+id/text_title"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt_view_email_address"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/text_email_address"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/edit_profile"
        android:id="@+id/txt_view_email_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:id="@+id/txt_view_user_type"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/edit_profile"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart" />

    <TextView
        android:text="User Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>