<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:id="@+id/cancel_profile" />

    <TextView
        android:text="@string/name"
        android:id="@+id/text_name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="@string/home_address"
        android:id="@+id/text_home_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_below="@+id/edit_name"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="@string/email_address"
        android:id="@+id/text_email_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/edit_home_address"
        android:layout_alignStart="@+id/textView"
        android:labelFor="@id/edit_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_name"
        android:layout_below="@+id/text_name"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/cancel_profile"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:labelFor="@id/edit_home_address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/cancel_profile"
        android:id="@+id/edit_home_address"
        android:layout_below="@id/text_home_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="@string/title"
        android:id="@+id/text_title"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/edit_email_address"
        android:layout_alignStart="@+id/textView"
        android:labelFor="@id/edit_email_address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/text_email_address"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/cancel_profile"
        android:id="@+id/edit_email_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_profile"
        android:layout_below="@+id/spinner_user_type"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/cancel_profile" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:id="@+id/spinner_user_type"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/cancel_profile"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="@string/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>